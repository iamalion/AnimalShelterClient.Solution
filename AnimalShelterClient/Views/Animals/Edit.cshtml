@{
  ViewData["Title"] = $"Edit {Model.Name}";
}

@model AnimalShelterApi.Models.Animal

<h3>Edit @Model.Name<h3>
@using (Html.BeginForm())
{
    @Html.HiddenFor(model => model.AnimalId)
    @Html.LabelFor(model => model.Name)
    @Html.TextBoxFor(model => model.Name, new { @Value = Model.Name})
    <br>
    @Html.LabelFor(model => model.Breed)
    @Html.TextBoxFor(model => model.Species, new { @Value = Model.Species})
    <br>
    @Html.LabelFor(model => model.Age)
    @Html.TextBoxFor(model => model.Age, new { Value = Model.Age})
    <br>
    @Html.LabelFor(model => model.Description)
    @Html.TextBoxFor(model => model.Description, new { @Value = Model.Description})
    <br>
    <div>
        @Html.LabelFor(model => model.Available)
        <br>
            <label>
                @Html.RadioButtonFor(model => model.Available, true)
                Available
            </label>
            <br>
            <label>
                @Html.RadioButtonFor(model => model.Available, false)
                Not Available
            </label>
    </div>
    <br>
    <input type="submit" value="Edit animal" class="btn btn-primary"/>
}
<br>
<p>@Html.ActionLink("Back to details", "Details", new {id = @Model.AnimalId})</p>